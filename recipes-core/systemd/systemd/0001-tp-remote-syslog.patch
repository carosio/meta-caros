+        offset = 0;
+        if (strncmp("_HOSTNAME=", sm->hostname, 10) == 0) offset = 10;
+        IOVEC_SET_STRING(iovec[HOSTNAME], sm->hostname+offset);
+        IOVEC_SET_STRING(iovec[SP_HOSTNAME], " ");
+        IOVEC_SET_STRING(iovec[APPNAME], sm->appname);
